{
  "version": 2,
  "name": "my-ai-website",
  "builds": [
    {
      "src": "billion-hopes/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd billion-hopes && npm run build",
        "distDir": "billion-hopes/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 